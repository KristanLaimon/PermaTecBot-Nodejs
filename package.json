{
  "name": "permabot",
  "version": "1.0.0",
  "description": "A simple bot code in typescript",
  "main": "js/index.js",
  "bin": "js/index.js",
  "scripts": {
    "dev": "tsnd --respawn src/index.ts",
    "build": "npm run build-tsc && npm run build-exes && npm run build-copy",
    "build-tsc": "tsc --build --clean && tsc --build",
    "build-exes": "pkg . -t latest-win-x64,latest-linux-x64 --out-path bin/",
    "build-copy": "cpy .env config.json imgs/ permabotdb.db bin"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "grammy": "^1.24.1",
    "moment": "^2.30.1",
    "node-fetch": "^2.7.0",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.7",
    "@vercel/ncc": "^0.38.1",
    "cpy-cli": "^5.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "pkg": {
    "scripts": [
      "js/**/*.js"
    ]
  }
}
